{
    "version": 2,
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.6.0" }
    },
    "routes": [
        {
            "src": "/(css|js|plugins|images|fonts|spreadsheets)/(.*)$",
            "dest": "/api/assets.php?type=$1&file=$2"
        },
        {
            "src": "/(.*)\\.(.+)/$",
            "dest": "public/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_NAME": "Town Portal",
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://townportal-capstone-2-lv8.vercel.app",
        "ASSET_URL": "https://townportal-capstone-2-lv8.vercel.app",

        "DB_CONNECTION": "mysql",
        "DB_HOST": "db-townportal.cuqrp9awxvyc.ap-southeast-1.rds.amazonaws.com",
        "DB_PORT": "3306",
        "DB_DATABASE": "db_townportal",
        "DB_USERNAME": "admin",
        "DB_PASSWORD": "password",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
}
